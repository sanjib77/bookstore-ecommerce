# =============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to Git!
#
# To use:
#   1. Copy this file: cp .env.example .env
#   2. Edit .env with your real values
#   3. Never commit .env to Git!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------

# Generate a new secret key for production:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production

# Set to False in production
DEBUG=True

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# Database name
DB_NAME=bookstore_db

# Database user
DB_USER=bookstore_user

# Database password (use a strong password in production)
DB_PASSWORD=your-secure-database-password

# Database host
# Local development: localhost
# AWS production: 10.0.2.50 (private IP of database EC2 instance)
DB_HOST=localhost

# Database port (default PostgreSQL port)
DB_PORT=5432

# -----------------------------------------------------------------------------
# Security & Networking
# -----------------------------------------------------------------------------

# Allowed hosts (comma-separated, no spaces)
# Local development: localhost,127.0.0.1
# Production: your-domain.com,www.your-domain.com,your-elastic-ip
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# AWS Production Settings (uncomment and configure for deployment)
# -----------------------------------------------------------------------------

# Production database host (private subnet IP)
# DB_HOST=10.0.2.50

# Production secret key (generate new one!)
# SECRET_KEY=your-production-secret-key-different-from-development

# Production debug mode (always False)
# DEBUG=False

# Production allowed hosts (your domain and elastic IP)
# ALLOWED_HOSTS=bookstore.example.com,3.80.123.45

# AWS Region (if needed)
# AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# Optional: Email Configuration (for future use)
# -----------------------------------------------------------------------------

# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-password

# -----------------------------------------------------------------------------
# Optional: Static/Media Files (for production with AWS S3)
# -----------------------------------------------------------------------------

# USE_S3=False
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1